VertexLitGeneric {

	$basetexture			models/bots/sniper/sniper_bot_head_blue
	$bumpmap				models/bots/sniper/sniper_bot_head_normal
	
	$phong					1
	$phongboost				4
	$phongexponent			10	
	$phongfresnelranges		"[.6 .9 1]"
	$halflambert			0
//	$phongexponenttexture	models/bots/sniper/sniper_bot_head_exp
	$basemapalphaphongmask 0

//	$color2					"{27 234 221}"

	$selfillum				1
	$selfillumtint			"{255 255 255}"

	$eyedefault				"{255 255 255}"
	$eyecolor				"{0 0 0}"

	$lightwarptexture		models/lightwarps/robot_lightwarp

	
	$rimlight				1						
	$rimlightexponent		1				
	$rimlightboost			2
	$rimmask				1

	//	Fire
	$detail					effects/tiledfire/fireLayeredSlowTiled512.vtf	
	$detailscale			5
	$detailblendfactor		0	//Why was this .01 instead of 0?
	$detailblendmode		6

	//Store result of Jarate effect
	$yellow					0

	// Cloaking
	$cloakPassEnabled		1

	$blendtintbybasealpha	1
	$blendtintcoloroverbase	0

	Proxies {
		//	Can't we just use the invis proxy?
		spy_invis {}
		//	Animate the fire texture
		AnimatedTexture {
			animatedtexturevar $detail
			animatedtextureframenumvar $detailframe
			animatedtextureframerate 30
		}
		//	Use the level of burning to determine how much it should be
		BurnLevel {
			resultVar $detailblendfactor
		}
		//	Get the level of the Jarate effect
		YellowLevel {
			resultVar $yellow
		}

		//Make use of the existing ItemTintColor proxy to color the eyes.
		ItemTintColor {
			resultVar $eyecolor
		}

		//Apply the robot's eye color to the base color as a tint IF ONE IS PROVIDED. Otherwise, we use the default eye color.
//		SelectFirstIfNonZero {
//			srcVar1	$eyecolor
//			srcVar2	$eyedefault
//			resultVar $color2
//		}

		SelectFirstIfNonZero {
			srcVar1	$eyecolor
			srcVar2	$eyedefault
			resultVar $selfillumtint
		}

//		Multiply {
//			srcVar1 $color2
//			srcVar2 $yellow
//			resultVar $color2
//		}

//		Multiply {
//			srcVar1 $selfillumtint
//			srcVar2 $yellow
//			resultVar $selfillumtint
//		}

	}
}
