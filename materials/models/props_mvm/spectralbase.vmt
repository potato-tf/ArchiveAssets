VertexLitGeneric
{
	$baseTexture models/props_mvm/spectralbase
	$additive 1

	$phong 1
	$phongexponent 4
	$phongboost 0.5	
	$lightwarptexture models/player/pyro/pyro_lightwarp
	$phongfresnelranges	"[.3 .5 .6]"
	$halflambert 0

	// Rim lighting parameters
	$rimlight 1
	$rimlightexponent 4
	$rimlightboost 7
	$selfillumfresnel 4

	$selfillumfresnelminmaxexp "[0 2 3]"
	$selfillum 1

	$rvar 0

	Proxies
	{
		LinearRamp
		{
			rate 20 
			initialvalue 0
			resultvar $rvar
		}
		TextureTransform
		{
			rotatevar $rvar
			resultvar $basetexturetransform
		}
		Sine
		{
			sineperiod 2
			sinemin 4
			sinemax 2
			resultvar "$selfillumfresnelminmaxexp[2]"
		}
		Sine
		{
			sineperiod 2
			sinemin 4
			sinemax 3
			resultvar "$selfillumfresnelminmaxexp[3]"
		}
	}
}
